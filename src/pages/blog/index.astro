---
import { getCollection } from "astro:content";
import Base from "../../layouts/Base.astro";
import BlogCard from "../../components/BlogCard.astro";
const d = await getCollection("blog");
const linkList = d.map((entry) => {
  return {
    url: `${Astro.url}${entry.slug}`,
    title: entry.data.title,
  };
});
---

<Base>
  <div class="container px-5 max-w-5xl mx-auto space-y-[12px] pt-11">
    {
      linkList.map((item) => {
        if (item.url && item.title) {
          return <BlogCard link={item} />;
        }
      })
    }
  </div>
</Base>
